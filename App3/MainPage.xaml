<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="visualizar Nombre compleeto Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Alumno: Víctor David Bárcenas Gómez" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Grupo: IDGS01" FontSize="16" Padding="30,0,30,0"/>

        <Label Text="Ingrese su nombre " FontSize="16" Padding="30,0,30,0"/>
        <Entry Text="{Binding Nombre}"></Entry>
        <Label/>
        <Label Text="ingrese su apellido paterno" FontSize="16" Padding="30,0,30,0"/>
        <Entry Text="{Binding ApPaterno}"></Entry>
        <Label/>
        <Label Text="Ingrese su apellido materno" FontSize="16" Padding="30,0,30,0"/>
        <Entry Text="{Binding ApMaterno}"></Entry>
        <Label/>

        <Label Text="{Binding nomCompleto}"/>


    </StackLayout>

</ContentPage>
